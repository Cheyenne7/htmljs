      </script>
    script
      $("#join_submit").click(function(){
        $.ajax({
          url:"/act/#{act.id}/join",
          dataType:"json",
          type:"post",
          success:function(data){

          if(data.success){
          alert("报名成功！")
            window.location.href=window.location.href;
          }else{
          if(data.isnotlogin){
          window.location.href="/user/login"
          }else{
          alert(data.info)
          }
          
          }
          }
          })
        })
              

