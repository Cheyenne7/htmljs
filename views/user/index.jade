html
  head
    include ./../head
    title 前端乱炖-我
    script(src='#{assets_head}/js/bootstrap/bootstrap-tooltip.js')
    
  body#user
    - locals.pageId=8;
    include ./../header
    #content
      include topinfo
      .main.clearfix
        .left
          .module.nav
            .bd
              a.active() 和我相关的状态
              a() 消息
              a() 经验值记录
              a() 我的专栏
              a() 我的问答

        .right
          .infos.module
            .hd 和我有关的状态
            .bd
              if !locals.infos
                p 暂无动态
              else
                each info in infos
                  .info-item(class="#{info.is_read?'':'noread'}")
                    .t 
                      a(href="/user/#{info.source_user_id}") #{info.source_user_nick} 
                      |  #{info.action_name}：
                      a(href="#{info.target_path}") #{info.target_path_name}
                    if info.content
                      .con !{info.content}
              include ../page

    include ../footer
        
    script
      $("#more_info").click(function(){
        $(".my_card").toggleClass("hidden")
        })
