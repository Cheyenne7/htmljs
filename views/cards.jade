!!! 5
html
  head
    include head
    title 前端花名册
    script(src='#{assets_head}/js/lazyload.js')
  body#cards
    - locals.pageId=2;
    include header
    #content.clearfix
      //
        p.alert.alert-success
          | wellcome #{locals.user && locals.user.nick}
          script(type='text/javascript', charset='utf-8')
            (function(){
            var _w = 72 , _h = 16;
            var param = {
            url:location.href,
            type:'3',
            count:'1', /**是否显示分享数，1显示(可选)*/
            appkey:'659341943', /**您申请的应用appkey,显示分享来源(可选)*/
            title:'《前端花名册》，前端界的人脉权威，如果你还没有加入，你就out了，快点来录入你的信息吧，及时获得人脉、工作机会、活动推荐通知。已经有#{total}人加入啦，还等什么赶紧戳这里：', /**分享的文字内容(可选，默认为所在页面的title)*/
            pic:'http://ww4.sinaimg.cn/large/6663ae3cgw1e418ogjkv3j20qn0jpjvc.jpg', /**分享图片的路径(可选)*/
            ralateUid:'1734409185', /**关联用户的UID，分享微博会@该用户(可选)*/
            language:'zh_cn', /**设置语言，zh_cn|zh_tw(可选)*/
            rnd:new Date().valueOf()
            }
            var temp = [];
            for( var p in param ){
            temp.push(p + '=' + encodeURIComponent( param[p] || '' ) )
            }
            document.write('<iframe allowTransparency="true" class="fb-like" frameborder="0" scrolling="no" src="http://hits.sinajs.cn/A1/weiboshare.html?' + temp.join('&') + '" width="'+ _w+'" height="'+_h+'"></iframe>')
            })()
      .group 
        form.search(action="")
          .input-append
            input.input-large(name="q",type="text",placeholder="根据昵称或者真名搜索")
            button.btn.btn-mini(type="submit") 搜索
      if locals.q
        .group
          a.label.title.label-inverse 搜索词：
          a.label #{q}
      .group
          a.label.title.label-inverse 按状态寻找：
          a.label(href="?",class="#{(!locals.filter_is_qiuzhi&&!locals.filter_is_zhaopin&&!locals.filter_is_jiehuo&&!locals.filter_is_xiangqin)?'label-success':''}") 所有
          a.label(href="?filter=is_qiuzhi|1",class="#{locals.filter_is_qiuzhi=='1'?'label-success':''}") 求职中
          a.label(href="?filter=is_zhaopin|1",class="#{locals.filter_is_zhaopin=='1'?'label-success':''}") 在招人
          a.label(href="?filter=is_jiehuo|1",class="#{locals.filter_is_jiehuo=='1'?'label-success':''}") 想接活
          a.label(href="?filter=is_xiangqin|1",class="#{locals.filter_is_xiangqin=='1'?'label-success':''}") 找对象
          a.label(href="?filter=sex|女",class="#{locals.filter_sex=='女'?'label-success':''}") 女生
          a.label(href="?filter=is_dan|单身",class="#{locals.filter_is_dan=='单身'?'label-success':''}") 单身
      .main.clearfix
        .left
          include page
          ul.f2er-list
            each card in cards
              li
                div.head_pic
                  img.lazy(data-original='#{card.head_pic||"http://www.gravatar.com/avatar/"+md5(card.email)+"?d=http://ww2.sinaimg.cn/mw690/6663ae3cgw1dw6f3l62w6j.jpg"}', width='50')
                div.infos
                  div
                    span.key 昵称
                    | ：#{card.nick}
                    if card.blog || card.github || card.weibo
                      span.sns
                        if card.blog
                          a.blog(href='#{card.blog}', target='_blank',title="博客地址") blog
                        if card.github
                          a.github(href='#{card.github}', target='_blank',title="github地址") github
                        if card.weibo
                          a.weibo(href='#{card.weibo}', target='_blank',title="微博地址") weibo
                  div
                    span.key 性别
                    span.value ：#{card.sex}
                    span.key 感情状况
                    span.value ：#{card.is_dan}
                    span.key 城市
                    span.value ：#{card.city}
                  div
                    span.key 职位
                    span.value ：#{card.zhiwei}
                    span.key 工作时间
                    span.value ：#{card.shijian}
                  div.shanchang.clearfix
                    span.key 擅长：
                    span.value #{card.techang.substr(0,100)}
                  div.more
                    a(href="/card/#{card.id}") 更多信息
                  if !locals.card
                    if card.user_id
                      span.renling 已被认领
                    else
                      a.renling(data-id="#{card.id}") 认领此名片 
                a.zan(data-id="#{card.id}")
                  .icon-heart.icon 
                  em #{card.zan_count||0}
                  .icon-eye-open.icon
                  span #{card.visit_count||0}
          include page
        .right
          if locals.hots
            .module
              .hd 今日最火
              .bd
                ol
                  each hot in hots
                    li
                      a(href="/card/#{hot.id}") #{hot.nick}(#{hot.visit_count})
          if locals.recents
            .module
              .hd 最新加入
              .bd
                ol
                  each recent in recents
                    li
                      a(href="/card/#{recent.id}") #{recent.nick}
          .module.fix-ad
              .hd 广告位
              .bd
                
    include footer
    script(src="#{assets_head}/js/messageTip.js")
    script
      $("img.lazy").lazyload();
      $("#gotop").click(function(){
      $('html,body').animate({
      scrollTop:0
      })
      })
      $("#layer").css({width:$(document.body).width(),height:$(document.body).height()})
      $("#login_popup").css({left:$(window).width()/2-125})
      $("a.zan").click(function(){
        var id = $(this).data("id");
          var self=this;
          $.ajax("/card/"+id+"/zan",{
            dataType:"json",
            type:"post",
            data:{
            },
            success:function(data){
              if(data.success){
                messageTip.show("Great!")
                $("em",$(self)).html(data.zan_count)
              }else{
              }
            },
            error:function(){

            }
          })
        })
      $("a.zan")[0].onselectstart = function(){return false;}
      $("a.renling").click(function(){
        if(confirm("你只能认领一次名片，确定这是您的名片并认领？")){
          var id = $(this).data("id");
          var self=this;
          $.ajax("/user/connet-card",{
            dataType:"json",
            type:"post",
            data:{
              id:id
            },
            success:function(data){
              if(data.success){
                alert("认领成功")
                window.location.href=window.location.href
              }else{
                if(data.isnotlogin){
                  alert("请先登录")
                  window.location.href="/user/login"
                }else{
                  alert(data.info)
                }
                
              }
            },
            error:function(){

            }
          })
        }
      });
